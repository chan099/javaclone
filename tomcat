node{
   stage('Scm checkout'){
     git 'https://github.com/sandeep212/javaclone.git'
   }
   stage('mvn build'){
      sh 'mvn package'
   }
    stage('SonarQube analysis') {
    withSonarQubeEnv('sonarqube') {
      // requires SonarQube Scanner for Maven 3.2+
      sh 'mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.2:sonar'
    }
  }
   stage("Quality Gate"){
          timeout(time: 1, unit: 'HOURS') {
              def qg = waitForQualityGate()
              if (qg.status != 'OK') {
                  slackSend baseUrl: 'https://hooks.slack.com/services/', 
                  channel: 'slack-notifications', 
                  color: 'danger', message: 'build fail due to the quality gates', 
                  teamDomain: 'javahome', 
                  tokenCredentialId: 'slack'
                  error "Pipeline aborted due to quality gate failure: ${qg.status}"
              }
              }
          }
          stage('deploy to tomcat'){
            sshagent(['tomcat']) {
                sh 'scp -o StrictHostKeyChecking=no target/*.war ec2-user@18.223.247.216:/home/ec2-user/apache-tomcat-8.5.34/webapps/'
}
}
   stage('email Notification'){
     mail bcc: '', 
        body: '''build the job successfully
        from sandeep''', cc: '', from: '', replyTo: '', 
        subject: 'jenkins job', 
        to: 'sandeepchowdary910@gmail.com'
   }
   stage('slack notifications'){
     slackSend baseUrl: 'https://hooks.slack.com/services/', 
     channel: 'slack-notifications', 
     color: 'good', message: 'job build sucessfully', 
     teamDomain: 'javahome', 
     tokenCredentialId: 'slack'
   }
    
}
